{# Navbar #}

<header class="p-10 z-10 w-full sticky top-0 flex shadow-xl bg-gray-200">
    <div class="hidden lg:block">
        <a href="{{ path('home') }}"><img width="50" height="50" src="/images/logo-daily-dev.png"/></a>
    </div>
    <nav class="w-full flex justify-between items-center lg:w-auto lg:flex-grow lg:justify-end">
        <div class="hidden lg:flex lg:mr-5">
            {% if is_granted("ROLE_USER") %}
                <a href="{{ path('create_news') }}" 
                class="transform transition duration-500 hover:scale-150">
                    <i class="fas fa-plus-circle fa-2x"></i>
                </a>
            {% endif %}
        </div>
        {% if not is_granted("ROLE_USER") %}
            <div>
            </div>
                <a href="{{ path('app_login') }}" class="text-2xl border-2 border-black rounded p-1 lg:p-0 lg:pr-5 lg:border-0">Connexion</a>
            <div>
                <a href="{{ path('app_register') }}" class="hidden text-2xl lg:pr-5 lg:block">Inscription</a>
            </div>
        {% else %}
            <div class="inline-block relative lg:mr-5">

                <button onClick="handleDropdown()" 
                class="dropdown-btn text-gray-700 font-semibold
                transform transition duration-500 hover:scale-150">
                    <i class="dropdown-btn fas fa-user fa-2x text-black"></i>
                </button>

                <ul id="dropdown" class="dropdown-content absolute hidden
                text-gray-700 pt-1 lg:-ml-24 lg:mt-3">

                    <li class="">
                        <a class="bg-gray-300 
                        hover:bg-blue-200 py-2 px-4 block whitespace-no-wrap" href="{{ path('my_news') }}">
                            My news
                        </a>
                    </li>

                    {% if is_granted("ROLE_ADMIN") %}
                        <li class="">
                            <a class="bg-gray-300 
                            hover:bg-blue-200 py-2 px-4 block whitespace-no-wrap" href="#">
                                Admin
                            </a>
                        </li>
                    {% endif %}
                    
                    <li class="">
                        <a class="rounded-b bg-gray-300 hover:bg-blue-200 
                        py-2 px-4 block whitespace-no-wrap" href="{{ path('app_logout') }}">
                            DÃ©connexion
                        </a>
                    </li>
                </ul>
            </div>

        {% endif %}
        <div class="lg:flex">
            <a href="{{ path('home') }}" 
            class="p-1 transform transition duration-500 hover:scale-150 lg:hidden">
                <i class="fas fa-home fa-2x"></i>
            </a>
        </div>

        
    </nav>
</header>