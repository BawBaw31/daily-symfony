{# templates/forms.html.twig #}
{% use 'tailwind_2_layout.html.twig' %}

{% block form_error %}
    {% set error_class = error_class|default('text-red') %}
    {{ parent() }}
{% endblock form_error %}

{% block form_row %}
    {% set row_class = row_class|default('') %}
    {{ parent() }}
{% endblock form_row %}

{% block form_label %}
    {% set label_class = label_class|default('font-semibold') %}
    {{ parent() }}
{% endblock form_label %}

{% block textarea_widget %}
    {% set widget_class = widget_class|default('p-2 w-full bg-gray-300 rounded-md shadow-xl') %}
    {{ parent() }}
{% endblock textarea_widget %}

{% block form_widget %}
    {% set widget_class = widget_class|default('p-2 w-full bg-gray-300 rounded-md shadow-xl') %}
    {{ parent() }}
{% endblock form_widget %}

{% block password_widget %}
    {% set widget_class = widget_class|default('p-2 w-full bg-gray-300 rounded-md shadow-xl') %}
    {{ parent() }}
{% endblock password_widget %}